
<div class="stush-container">
    <div class="stush-area">
        <div class="view-header-2">
            <span>
                <i class="fas fa-chalkboard"></i>
                List of tutors
            </span>
        </div>
  <!-- Filter for location and subject -->
  <%= form_tag class_registers_path, :method => 'get', class: "index-form" do %>
    <%= collection_select :class_register, :location_id, Location.select(:city).distinct, :id, :city, {prompt: "Chọn địa điểm"}, {class: "custom-select"} %>
    <%= collection_select :class_register, :subject_id, Subject.all, :id, :name, {prompt: "Chọn môn học"}, {class: "custom-select"} %>
    <%= submit_tag "Áp dụng", class: "mbtn-primary" %>
  <% end %>
  <!-- Display class -->
  <% @class_registers.each do |class_register| %>

  <div id="class-show-head">
    <hr class="solid">
    <div class="class-element-container">
      <div id="left-element">
        <!-- <img src="images/maxresdefault.jpg" class="float-left img-responsive"> -->
        <%= image_tag("images/MiyaSuzuhime.jpg", class:"img-responsive") %>
      </div>

      <div id="front-element">
        <h5 style="padding:5px;">Mô tả:<%=link_to class_register.description, class_register_path(class_register)%></h5><br/>
        <p>Nội dung học:<%= class_register.class_content %></p>

      </div>

      <div id="right-element">
        <% if current_tutor %>
          <%= link_to 'Đề nghị dạy', class_register_path(class_register), class: "mbtn-primary" %>
        <% else %>
          <%= link_to 'Chi tiết', class_register_path(class_register), class: "mbtn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="center-paginate">
    <%= paginate @class_registers, theme: 'twitter-bootstrap-4'%>
  </div>
  </div>
</div>
