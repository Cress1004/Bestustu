

<div class="edus-container">
    <div class="edus-box">
        <div class="edus-background">
          <div class="edus-ava">
            <% if !current_user.image.url %>
              <img src="/uploads/user/image/avt_define/avt_male.png" class="avatar-size rounded-circle">
            <% else %>
              <%= image_tag current_user.image.to_s, :class => "avatar-size rounded-circle" %>
            <% end %>
          </div>
          <% if !current_user.tutor && !current_user.student%>
          <div class="edus-edit">
            <%# <button class="btn btn-primary">Edit your profile</button> %>
            <%= link_to 'Become student', new_student_path   %>
            <%= link_to 'Become teacher', new_tutor_path   %>
          </div>
          <% end %>
        </div>
        <div class="edus-area-show edus-content-item">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,  class:"datetimepicker" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>


            <div class="edus-header">
              <h2>Edit <%= resource_name.to_s.humanize %></h2>
            </div>
            <div class="field form-group">
              Ảnh đại diện:
              </br>
              <%= f.file_field :image %>
            </div>
          <div class = "form-grid">
            <div class="field form-group">
              <%= f.label :username %><br />
              <%= f.text_field :username, autofocus: true, autocomplete: "username",class:"form-control" %>
              <span id="username_error"></span>
            </div>

            <div class="field form-group">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control" %>
              <span id="name_error"></span>
            </div>

            <div class="field form-group">
              <%= f.label :phone %><br />
              <%= f.text_field :phone, autofocus: true, autocomplete: "phone",class:"form-control" %>
              <span id="phone_error"></span>
            </div>

            <div class="field form-group">
              <%= f.label :gender %><br />
              <%= f.label :gender, "Female", :value => 0  %>
              <%= f.radio_button :gender, 0%>
              <%= f.label :gender, "Male", :value => 1 %>
              <%= f.radio_button :gender, 1%>
            </div>
            <div class="field form-group">
              <%= f.label :birthday %><br/>
              <%= f.date_field :birthday, class:"form-control"%>
            </div>

          <div class="field form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
            <% if @minimum_password_length %>

              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :current_password %>
            <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
          </div>

        </div>
        <div class="actions">
            <%= f.submit "Update", class:"btn btn-danger" %>
          </div>
        <% end %>
        <div class="edus-header">
          <h2>Cancel my account</h2>
        </div>
        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-primary" %></p>


        <%= link_to "Back", :back %>

      </div>
</div>
