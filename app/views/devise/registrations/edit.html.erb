

<div class="edus-container">
    <div class="edus-box">
        <div class="edus-background">
          <div class="edus-ava">
            
          </div>
          <div class="edus-edit">
            <%# <button class="btn btn-primary">Edit your profile</button> %>
            <%= link_to 'Become student', new_student_path   %>
            <%= link_to 'Become teacher', root_path   %>
          </div>
        </div>
        <div class="edus-area">
          <div class="edus-header">
            <h2>Edit <%= resource_name.to_s.humanize %></h2>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
          <div  class = "form-grid">
            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
 
             <div class="field form-group">
              <%= f.label :name %> 
              <%= f.text_field :name, autocomplete: "name",class:"form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
              <% if @minimum_password_length %>
                
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div> 

            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :current_password %> 
              <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
            </div>



            <div class="field form-group">
              <%= f.label :phone %> 
              <%= f.text_field :phone, autocomplete: "phone",class:"form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :age %> 
              <%= f.number_field :age, autocomplete: "age",class:"form-control" %>
            </div>

            <div class = "field form-group">
              <%# <%= f.select :gender, options_for_select([['a','b'], params[:gender])%>
              <%= f.select(:gender, options_for_select(['Male', 'Female'], selected: @resource.gender || nil), { include_blank: "Select Result" }) %>
            </div>

          </div>
          <div class="actions">
              <%= f.submit "Update", class:"btn btn-danger" %>
            </div>
          <% end %>
          <div class="edus-header">
            <h2>Cancel my account</h2>
          </div>
          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-primary" %></p>
          

          <%= link_to "Back", :back %>

        </div>
    </div>
</div>
  