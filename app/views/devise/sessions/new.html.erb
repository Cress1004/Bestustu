<div class="siup-container">
    <div class="siup-box">
        <div class="siup-area">
          <div class="worm-header">
            <h2>Đăng nhập</h2>
          </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field form-group">
                <%= f.text_field :username, autofocus: true,class:"form-control", placeholder: "User name" %>
                <span id="username_error" class="my-error-span"></span>
              </div>

              <div class="field form-group">
                <%= f.password_field :password, autocomplete: "current-password",class:"form-control", placeholder: "Password" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Đăng nhập",class:"mbtn-danger" %>
                <div class="sub-actions">
                  <div>
                    <%= render "devise/shared/links" %>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
    </div>
</div>
