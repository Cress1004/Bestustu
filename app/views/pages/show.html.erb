<div class="edus-container">
    <div class="edus-box">
        <div class="edus-background">
          <div class="edus-ava">
            <%= image_tag current_user.image.to_s, :class => "avatar-size rounded-circle" %>
          </div>
          <div class="edus-edit">
            <%# <button class="btn btn-primary">Edit your profile</button> %>
            <%= link_to 'Edit your profile',  edit_user_registration_path , class: 'mbtn-primary' %>
          </div>
        </div>
         <div class = "edus-nav-and-content">
          <div class ="edus-nav">
            <div class = "edus-nav-item user-navbar-active" value="1">
              <i class = "fas fa-smile">
              </i>
              Thong tin ca nhan
              <i class = "fas fa-chevron-down">
              </i>

            </div>
            <div class = "edus-nav-item" value="2">
              <i class="fa fa-pencil-square"></i>
              Quan ly yeu cau
              <i class = "fas fa-chevron-down">
              </i>
            </div>
            <div class = "edus-nav-item" value="3" >
              <i class="fas fa-comments"></i>
              Hoi thoai va tin nhan
              <i class = "fas fa-chevron-down">
              </i>
            </div>
             <div class = "edus-nav-item" value="4" >
             <i class="fa fa-bell"></i>
              Thong bao
              <i class = "fas fa-chevron-down">
              </i>
            </div>
          </div>
          <div class ="edus-content">
            <div class="edus-area edus-content-item ">
              <div class="edus-header">
                <h2>User info</h2>

              </div>

              <div class="edus-show-info">
                <div class="edus-show-info-item">
                  <div>
                      Email:
                  </div>
                  <div class="edus-show-info-content">
                      <%= @user.email %>
                  </div>
                </div>
                <div class="edus-show-info-item">
                  <div>
                      Username:
                  </div>
                  <div class="edus-show-info-content">
                      <%= @user.username %>
                  </div>
                </div>
                <div class="edus-show-info-item">
                  <div>
                      Uid:
                  </div>
                  <div class="edus-show-info-content">
                      <%= @user.uid %>
                  </div>
                </div>
                <div class="edus-show-info-item">
                  <div>
                      Name:
                  </div>
                  <div class="edus-show-info-content">
                      <%= @user.name %>
                  </div>
                </div>
                <div class="edus-show-info-item">
                  <div>
                      Phone:
                  </div>
                  <div class="edus-show-info-content">
                      <%= @user.phone %>
                  </div>
                </div>
                <div class="edus-show-info-item">
                  <div>
                      Gender:
                  </div>
                  <div class="edus-show-info-content">
                      <%= @user.gender %>
                  </div>
                </div>
                <div class="edus-show-info-item">
                  <div>
                      Age:
                  </div>
                  <div class="edus-show-info-content">
                      <%= @user.birthday %>
                  </div>
                </div>
                <div class="edus-show-info-item">
                  <div>
                      Bpoint:
                  </div>
                  <div class="edus-show-info-content">
                      <%= @user.bpoint %>
                  </div>
                </div>
              </div>


            </div>
            <%# second,third... nav %>
            <div class = "edus-content-item edus-content-item-style">
              <div class="edus-content-item-header">
                <h2>
                Quan ly yeu cau
                </h2>

              </div>
              <div class="edus-content-item-content">
                <% if @class_register %>
                  <% @class_registers.each do |class_register| %>
                    <%= link_to class_register.description, class_register_path(class_register) %><br>
                  <% end %>
                <% end %>
              </div>
          </div>

          <div class = "edus-content-item edus-content-item-style">
              <div class="edus-content-item-header">
                <h2>
                Hoi thoai
                </h2>

              </div>
              <div class="edus-content-item-content">
                Chưa co yeu cau nao!
              </div>
          </div>
          <div class = "edus-content-item edus-content-item-style">
              <div class="edus-content-item-header">
                <h2>
                Tin nhan
                </h2>

              </div>
              <div class="edus-content-item-content">
                <% if @temp_hash %>
                <ul class="list-group">
                  <% @temp_hash.each do |message,obj| %>
                    <li class="list-group-item">

                      <p>Message for you: <%= message.message_content %></p>
                      <% if current_student %>
                        <%= link_to obj.user.name, tutor_path(obj) %>
                      <% elsif current_tutor %>
                        <%= link_to obj.user.name, student_path(obj) %>
                      <% end %>
                      <br>
                      <%= link_to "Xóa tin", message_path(message), method: :delete,
                              data: { confirm: "Are you sure you want to delete the message?"},
                              class: "btn btn-xs btn-danger" %>
                    </li>
                  <% end %>
                </ul>
                <% end %>

              </div>
          </div>


        </div>
    </div>
    </div>
</div>
