        <div class="nav-area">
            <nav>
                <ul class="menu">
                    <li >
                        <%# <a href="#">HOME</a> %>
                        <%= link_to 'HOME', root_path%>
                    </li>
                    <li>
                        <%= link_to 'CLASS', new_user_registration_path%>

                        <ul class="submenu">
                            <li><a href="#">Class list</a></li>
                        </ul>
                    </li>
                    <li>
                        <%= link_to 'TUTOR', new_user_registration_path%>
                        <%# <ul class="submenu">
