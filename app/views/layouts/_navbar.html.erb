                            <li><a href="#">Third submenu</a></li>
                            <li><a href="#">Fourth submenu</a></li>
                        </ul> %>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="sign-container">
        <div class="sign-area">
            <%# <a class="sign-in-area" href="sign-in.html"> %>

            <% if current_user %>
                <%= link_to show_user_info_path(current_user), class:'sign-in-area' do %>

                    <div class="sign-in-header">
                      <i class="fas fa-user-edit"></i>
                      <% if current_user.username %>
                         <%= current_user.username%>
                      <% else %>
                          Your Profile
                      <% end %>
                    </div>
                <% end %>
                <%= link_to  destroy_user_session_path, method: :delete, class:'sign-up-area' do %>
                    <div class="sign-up-header">
                        <i class="fas fa-sign-in-alt"></i> Log out
                    </div>
                <% end %>
            <% else %>
                <%= link_to new_user_session_path, class:'sign-in-area' do %>
                    <div class="sign-in-header">
                        <i class="fas fa-sign-in-alt"></i> Sign in
                    </div>
                <% end %>
                <%= link_to new_user_registration_path, class:'sign-up-area' do %>
                    <div class="sign-up-header">
                        <i class="fas fa-user-plus"></i> Sign up
                    </div>
                <% end %>

            <% end %>
        </div>
    </div>

</header>
