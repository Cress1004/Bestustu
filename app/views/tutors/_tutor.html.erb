<% index = 1 %>

<%= form_tag tutors_path, :method => 'get' , class: "index-form" do %>
  <%= collection_select :tutor, :location_name, Location.select(:city).distinct, :city, :city, {prompt: "Chọn địa điểm"}, {class: "custom-select"}%>
  <%= collection_select :tutor, :subject_ids, Subject.all, :id, :name, {prompt: "Chọn môn học"}, {:class => "custom-select"} %>
  <%= submit_tag "Áp dụng", class: "mbtn-primary " %>
<% end %>

<% obj.each do |tutor| %>
  <% @subjects = tutor.subjects %>
  <% @user = User.find(tutor.user_id) %>
  <% @location = Location.find(tutor.location_id) %>
  <% if index%3 == 1 %>
    <div class="row" >
  <% end %>
    <div class="col-sm-3">
      <div class="card" >
      <%= link_to tutor_path(tutor),class: "img-wrapper" do%>
        <%= image_tag @user.image.to_s, :class => "card-img-top img-fit"%>
      <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= @user.name %></h5>
          <p class="card-text">
            <% if @subjects %>
              <% count = 1 %>
              <% @subjects.each do |subject| %>
                <% count = count +1  %>
                  <% if count < 4 %>
                    <span class="badge badge-secondary"><%= subject.name %></span>
                  <% end %>
                <% end %>
              <span class="badge badge-secondary">...</span>
            <% end %><br/>
            <span class="header-span">Job: </span><%= tutor.job %> in <%= tutor.work_place %><br/>
            <span class="header-span">Address: </span><%= @location.city %><br/>
            <span class="header-span">Description:</span><%= tutor.description[0..39] %>
            <% if tutor.description.length >= 39 %>
            ...
            <% end %>
          </p>
          <a><%= link_to "Register now", tutor_path(tutor), class: "mbtn-primary"%></a>
        </div>
    </div>
  </div>
  <% if index%3 == 0 %>
    </div>
  <% end %>
  <% index = index+1 %>
<% end %>
