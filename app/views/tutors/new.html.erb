<h1>Tutor registration</h1>


<%= form_for @tutor do |f| %>
  <p>
  <%= f.label :job %><br/>
  <%= f.text_field :job %>
    <span id="job_error"></span>
  </p>

  <p>
  <%= f.label :work_place %><br/>
  <%= f.text_field :work_place %>
    <span id="work_place_error"></span>
  </p>

  <p>
  <%= f.label :description %><br/>
  <%= f.text_area :description %>
  </p>

  <p>
  <%= f.label :achievement %><br/>
  <%= f.text_area :achievement %>
  </p>

<p>
  <%= f.label :subject_id %><br/>
  <div class="">
        <%= f.collection_select(:subject_ids, Subject.all, :id, :name, prompt: "Chọn môn học") %>
  </div>
  </p>



    
  <p>
    <%= f.label :location_id, "City" %>
    <%= f.collection_select(:location_id, Location.select(:city, :city_id).distinct, :city_id, :city, {:prompt => 'Please select the city'}, {:class => 'location-city'}) %>
  </p>

  <p>
  <%= f.submit %>
  </p>
<% end %>
