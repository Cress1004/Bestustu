<div class="row">
  <div class="col-md-12">
    <%= form_for(@tutors, :html => {class:"form-horizontal", role:"form"})  do |tutor| %>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-10">
        <%=f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: "true"%>
      </div>
    </div>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-10">
        <%=f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of articles", autofocus: "true"%>
      </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    <div class="form-group row">
      <div class="col-sm-2 offset-sm-2">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
        [<%= link_to 'Cancel request and return to articles listing', articles_path %>]
    </div>
  </div>
  <% end %>
</div>


